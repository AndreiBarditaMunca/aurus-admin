{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": true
    },
    "posted_on": {
      "type": "string"
    },
    "created_date": {
      "required": true,
      "type": "date"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "read_time": {
      "type": "string"
    },
    "excerpt": {
      "type": "string",
      "required": true,
      "minLength": 5,
      "maxLength": 80
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
